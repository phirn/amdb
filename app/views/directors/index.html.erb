<h1>Directors</h1>

<p><%= link_to 'Add a New Director', new_director_url %></p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @directors.each do |director| %>
    <tr>
      <td><%= director.name %></td>
      <td><%= director.dob %></td>

      <td><%= link_to 'Show', director %></td>
      <td><%= link_to 'Edit', edit_director_url(director) %></td>
      <td><%= link_to 'Destroy', director, method: 'delete', data: { confirm: "Do you really want to delete this director?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

