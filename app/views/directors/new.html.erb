<h1>New Director</h1>

<% if @director.errors.any? %>
  <ul>
    <% @director.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @director do |f| %>
  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :dob %><br />
    <%= f.text_field :dob %>
  </div>
  <div>
    <%= submit_tag %>
  </div>
<% end %>
