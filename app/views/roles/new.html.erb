<h1>New Role</h1>

<% if @role.errors.any? %>
  <ul>
    <% @role.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @role do |f| %>
  <div>
    <%= f.label :character_name %><br />
    <%= f.text_field :character_name %>
  </div>
  <div>
    <%= f.label :actor_id %><br />
    <%= f.collection_select :actor_id, Actor.all, :id, :name %>
  </div>
  <div>
    <%= f.label :movie_id %><br />
    <%= f.collection_select :movie_id, Movie.all, :id, :title %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
