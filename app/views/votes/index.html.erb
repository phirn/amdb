<h1>Votes</h1>

<p><%= link_to 'Add a New Vote', new_vote_url %></p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Movie</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @votes.each do |vote| %>
    <tr>
      <td><%= vote.movie.title %></td>
      <td><%= vote.user.username %></td>

      <td><%= link_to 'Show', vote_url(vote) %></td>
      <% if current_user == vote.user %>
        <td><%= link_to 'Edit', edit_vote_url(vote) %></td>
        <td><%= link_to 'Destroy', vote_url(vote), method: 'delete', data: { confirm: "Do you really want to delete this vote?" } %></td>
      <% else %>
        <td></td>
        <td></td>
      <% end %>

    </tr>
  <% end %>
  </tbody>
</table>

