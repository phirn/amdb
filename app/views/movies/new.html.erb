<h1>New Movie</h1>

<% if @movie.errors.any? %>
  <ul>
    <% @movie.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @movie do |f| %>
  <div>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :year %><br />
    <%= f.number_field :year %>
  </div>
  <div>
    <%= f.label :director_id %><br />
    <%= f.collection_select :director_id, Director.all, :id, :name %>
  </div>
  <div>
    <%= submit_tag %>
  </div>
<% end %>








